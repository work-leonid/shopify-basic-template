---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Sora:wght@700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>
	<body class="text-xl bg-cyan-100/80 text-slate-800">
		<slot />
	</body>
</html>

<!-- Alpine Plugins -->
<script is:inline defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
></script>

<script
	is:inline
	defer
	src="https://unpkg.com/@alpinejs/intersect@3.x.x/dist/cdn.min.js"
></script>
